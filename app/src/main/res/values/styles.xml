<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Widget.MaterialComponents.TextView.UserGreeting">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BasicLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/labelColor</item>
    </style>

    <style name="ToolbarColored" parent="Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ItemLabel">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>